# ==============================================================================
# SaaS Validation System - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# AI / ML Services
# ------------------------------------------------------------------------------
# Get your key: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Optional: OpenAI for additional AI features
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ------------------------------------------------------------------------------
# Database / Backend
# ------------------------------------------------------------------------------
# Supabase project URL (format: https://xxx.supabase.co)
# Get from: https://supabase.com/dashboard → Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public safe)
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase service role key (NEVER expose to frontend, backend only)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ------------------------------------------------------------------------------
# Deployment
# ------------------------------------------------------------------------------
# Vercel authentication token
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your-vercel-token-here

# Optional: Vercel Organization ID (for team deployments)
# Get from: https://vercel.com/teams/settings
VERCEL_ORG_ID=your-vercel-org-id-here

# ------------------------------------------------------------------------------
# Integrations (Optional)
# ------------------------------------------------------------------------------
# Slack webhook for lead notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notion integration for knowledge base
NOTION_TOKEN=your-notion-integration-token-here
NOTION_DATABASE_ID=your-notion-database-id-here

# GitHub personal access token (for repo automation)
GITHUB_TOKEN=your-github-pat-here

# ------------------------------------------------------------------------------
# Analytics (Optional)
# ------------------------------------------------------------------------------
# Google Analytics 4 measurement ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Plausible analytics domain
PLAUSIBLE_DOMAIN=your-domain.com

# ------------------------------------------------------------------------------
# Email Service (Optional)
# ------------------------------------------------------------------------------
# SendGrid for email notifications
SENDGRID_API_KEY=your-sendgrid-key-here

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false

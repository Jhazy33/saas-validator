# Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google AI
GOOGLE_API_KEY=your_google_gemini_api_key

# OpenAI (Optional - for alternative AI)
OPENAI_API_KEY=your_openai_api_key

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=price_your_pro_price_id
NEXT_PUBLIC_STRIPE_PRICE_ID_TEAM=price_your_team_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Database (for direct connection if needed)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/saas_validator

# Redis
REDIS_URL=redis://redis:6379

# Email (Resend or similar)
RESEND_API_KEY=re_your_resend_api_key
NEXT_PUBLIC_APP_EMAIL=noreply@yourapp.com

# GitHub (if integrating with GitHub)
GITHUB_TOKEN=your_github_personal_access_token

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
NEXT_PUBLIC_ENABLE_SIGNUPS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_MAX_FREE_LANDING_PAGES=3
